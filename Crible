#include <stdio.h>
#include <stdbool.h>
#include <math.h>

int main() {
    int n;
    
    printf("Entrez un nombre maximum pour trouver les nombres premiers: ");
    scanf("%d", &n);

    // Création d'un tableau de booléens pour marquer les nombres premiers
    bool estPremier[n + 1];

    // Initialisation du tableau : tous les nombres sont considérés premiers
    for (int i = 0; i <= n; i++) {
        estPremier[i] = true;
    }

    estPremier[0] = false; // 0 n'est pas premier
    estPremier[1] = false; // 1 n'est pas premier

    // Crible d'Eratosthène
    for (int i = 2; i <= sqrt(n); i++) {
        if (estPremier[i]) {
            for (int j = i * i; j <= n; j += i) {
                estPremier[j] = false; // marquer les multiples comme non-premiers
            }
        }
    }

    // Affichage des nombres premiers
    printf("Les nombres premiers jusqu'à %d sont :\n", n);
    for (int i = 2; i <= n; i++) {
        if (estPremier[i]) {
            printf("%d ", i);
        }
    }
    printf("\n");

    return 0;
}
